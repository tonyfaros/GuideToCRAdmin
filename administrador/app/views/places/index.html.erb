<p id="notice"><%= notice %></p>

<h1>Places</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Clima</th>
      <th>Tarifa</th>
      <th>Descripcion</th>
      <th>Datos</th>
      <th>Ubicacion</th>
      <th>Foto</th>
      <th>Aceptado</th>
      <th>Categoria</th>
      <th>Provincia</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @places.each do |place| %>
      <tr>
        <td><%= place.nombre %></td>
        <td><%= place.clima %></td>
        <td><%= place.tarifa %></td>
        <td><%= place.descripcion %></td>
        <td><%= place.datos %></td>
        <td><%= place.ubicacion %></td>
        <td><%= place.foto %></td>
        <td><%= place.aceptado %></td>
        <td><%= place.categoria %></td>
        <td><%= place.provincia %></td>
        <td><%= link_to 'Show', place %></td>
        <td><%= link_to 'Edit', edit_place_path(place) %></td>
        <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

